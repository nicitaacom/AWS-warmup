{
  "compilerOptions": {
     "jsx": "react-jsx",
    "target": "ES2020",
    // keep it CommonJS to prevent import errors
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}